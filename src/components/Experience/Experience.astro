---
import { getEntry } from 'astro:content';
import ExperienceCard from './ExperienceCard.astro';

const experiences = (await getEntry('experience', 'experience')).data
    .experiences;
---

<div class="flex flex-col justify-center items-center mb-10" id="experiences">
    <h2
        class="font-bold text-3xl mb-10 font-JetBrains text-ctp-red"
        data-aos="fade-up"
    >
        &lt;
        <span class="text-ctp-text">Work Experience</span>
        /&gt;
    </h2>

    <div class="flex flex-col justify-center items-center">
        {
            experiences.map((experience, index) => (
                <ExperienceCard {...experience} index={index} />
            ))
        }
    </div>
</div>
