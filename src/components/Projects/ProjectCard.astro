---
import { Image } from 'astro:assets';
import type { ProjectSchemaType } from '../../content/config';
import Button from '../shared/Button';
interface Props extends ProjectSchemaType {
    index: number;
}

const { index, title, description, tags, previewLink, githubLink, image } =
    Astro.props;
---

<div
    class={`flex flex-col ${
        index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'
    } my-10`}
>
    <div class="mb-10 lg:w-1/2">
        <h3
            class="text-2xl font-semibold my-3 border-b-4 pb-2 border-b-ctp-red inline-block mb-5 font-JetBrains tracking-wide"
        >
            {title}
        </h3>
        <p>{description}</p>
        <div class="mt-4 flex flex-wrap">
            {
                tags &&
                    tags.map((tag) => (
                        <span class="mb-3 md:mb-5 mr-2 md:mr-4 py-2 px-4 bg-ctp-surface0 hover:bg-ctp-blue text-white rounded-full cursor-pointer text-sm md:text-base font-JetBrains transition-all duration-150">
                            {tag}
                        </span>
                    ))
            }
        </div>
        <div class="flex mt-3">
            {
                previewLink && (
                    <a
                        class="mr-10"
                        href={previewLink}
                        target="_blank"
                        rel="noreferrer"
                    >
                        <Button>Preview</Button>
                    </a>
                )
            }
            <a href={githubLink} target="_blank" rel="noreferrer">
                <Button>View Code</Button>
            </a>
        </div>
    </div>
    <div class={`lg:w-1/2 ${index % 2 === 0 ? 'lg:ml-10' : 'lg:mr-10'}`}>
        <Image
            src={`/projects/${image}`}
            height={300}
            width={600}
            alt={title}
            class="shadow-lg rounded-lg"
        />
    </div>
</div>
